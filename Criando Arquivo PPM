#include <stdlib.h>
#include <stdio.h>
 
int main()
{
  const int dimx = 800, dimy = 800;
  int i, j;
  fprintf(fp, "P6\n%d %d\n255\n", dimx, dimy);
  for (j = 0; j < dimy; ++j)
  {
    for (i = 0; i < dimx; ++i)
    {
      static unsigned char color[3];
      color[0] = i % 256;  /* red */
      color[1] = j % 256;  /* green */
      color[2] = (i * j) % 256;  /* blue */
      fwrite(color, 1, 3, fp);
    }
  }
  fclose(img);
  return EXIT_SUCCESS;
}
