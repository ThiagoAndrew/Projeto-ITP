
#include <stdlib.h>
#include <stdio.h>

/**
*@author Thiago Andrew e Samuel Dumaresq.
*@since nov 2019.
*@version 1.0.
*criação do arquivo ppm.
*/

/**
*criando um arquivo (imagem) no formato ppm.
*/
int main()
{
  printf("image: ");
  int dimx, dimy;
  scanf("image: %d %d", &dimx, &dimy);
  
  printf("save: ");
  char arq[50];
  scanf("save: %s", arq);
  
  int i, j;
  FILE *img = fopen(arq, "wb"); /* b - binary mode */
  fprintf(img, "P6\n%d %d\n255\n", dimx, dimy);
  for (j = 0; j < dimy; j++)
  {
    for (i = 0; i < dimx; i++)
    {
      static unsigned char color[3];
      color[0] = i % 256;  //red
      color[1] = j % 256;  //green 
      color[2] = (i * j) % 256;  //blue 
      fwrite(color, 1, 3, img);
    }
  }
  fclose(img);
  return EXIT_SUCCESS;
}
